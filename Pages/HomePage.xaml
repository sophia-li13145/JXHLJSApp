<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    x:Class="JXHLJSApp.Pages.HomePage"
    BackgroundColor="#F6F7FB"
    Shell.NavBarIsVisible="True">

    <ContentPage.Resources>
        <!-- 区块标题样式 -->
        <Style x:Key="SectionTitle" TargetType="Label">
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="FontAttributes" Value="Bold"/>
            <Setter Property="TextColor" Value="#2B2F36"/>
            <Setter Property="Margin" Value="12,18,12,10"/>
        </Style>

        <!-- 卡片外观样式 -->
        <Style x:Key="Card" TargetType="Frame">
            <Setter Property="CornerRadius" Value="12"/>
            <Setter Property="HasShadow" Value="False"/>
            <Setter Property="Padding" Value="10"/>
            <Setter Property="BackgroundColor" Value="White"/>
            <Setter Property="BorderColor" Value="#EEF0F4"/>
            <Setter Property="Margin" Value="8"/>
        </Style>
    </ContentPage.Resources>

    <ScrollView>
        <VerticalStackLayout>

            <!-- 顶部蓝条 -->
            <Grid BackgroundColor="#0C86FF" HeightRequest="56" Padding="16,0">
                <Label Text="联创云工软平台"
                       VerticalOptions="Center"
                       TextColor="White"
                       FontSize="18"
                       FontAttributes="Bold"/>
                <Button Text="退出登录"
            TextColor="White"
            BackgroundColor="DarkBlue"
            CornerRadius="8"
            Padding="12,4"
            FontSize="14"
            HorizontalOptions="End"
            VerticalOptions="Center"
            Grid.Column="1"
            Clicked="OnLogoutClicked"/>
            </Grid>

            <!-- 仓储作业 -->
            <Label Text="仓储作业" Style="{StaticResource SectionTitle}"/>

            <Grid ColumnDefinitions="*,*"
                  RowDefinitions="Auto,Auto,Auto,Auto,Auto"
                  Padding="8,0,8,24">

                <!-- 物料入库 -->
                <Frame Grid.Row="0" Grid.Column="0" Style="{StaticResource Card}">
                    <VerticalStackLayout HorizontalOptions="Center">
                        <Border HeightRequest="64" WidthRequest="64"
                                BackgroundColor="#00ACC1"
                                StrokeShape="RoundRectangle 32">
                            <Image Source="in_mold.svg"
                                   HeightRequest="28" WidthRequest="28"
                                   HorizontalOptions="Center"
                                   VerticalOptions="Center"/>
                        </Border>
                        <Label Text="物料入库" FontSize="12" Margin="0,6,0,0"
                               HorizontalTextAlignment="Center" TextColor="#333"/>
                    </VerticalStackLayout>
                    <Frame.GestureRecognizers>
                        <TapGestureRecognizer Tapped="OnInMat"/>
                    </Frame.GestureRecognizers>
                </Frame>

                <!-- 生产入库 -->
                <Frame Grid.Row="0" Grid.Column="1" Style="{StaticResource Card}">
                    <VerticalStackLayout HorizontalOptions="Center">
                        <Border HeightRequest="64" WidthRequest="64"
                                BackgroundColor="#26C6DA"
                                StrokeShape="RoundRectangle 32">
                            <Image Source="checkmark_circle_24_filled.svg"
                                   HeightRequest="28" WidthRequest="28"
                                   HorizontalOptions="Center"
                                   VerticalOptions="Center"/>
                        </Border>
                        <Label Text="生产入库" FontSize="12" Margin="0,6,0,0"
                               HorizontalTextAlignment="Center" TextColor="#333"/>
                    </VerticalStackLayout>
                    <Frame.GestureRecognizers>
                        <TapGestureRecognizer Tapped="OnInProd"/>
                    </Frame.GestureRecognizers>
                </Frame>

                <!-- 到货入库 -->
                <Frame Grid.Row="1" Grid.Column="0" Style="{StaticResource Card}">
                    <VerticalStackLayout HorizontalOptions="Center">
                        <Border HeightRequest="64" WidthRequest="64"
                                BackgroundColor="#5C6BC0"
                                StrokeShape="RoundRectangle 32">
                            <Image Source="scan_button.png"
                                   HeightRequest="28" WidthRequest="28"
                                   HorizontalOptions="Center"
                                   VerticalOptions="Center"/>
                        </Border>
                        <Label Text="到货入库" FontSize="12" Margin="0,6,0,0"
                               HorizontalTextAlignment="Center" TextColor="#333"/>
                    </VerticalStackLayout>
                    <Frame.GestureRecognizers>
                        <TapGestureRecognizer Tapped="OnIncomingStock"/>
                    </Frame.GestureRecognizers>
                </Frame>

                <!-- 物料出库 -->
                <Frame Grid.Row="1" Grid.Column="1" Style="{StaticResource Card}">
                    <VerticalStackLayout HorizontalOptions="Center">
                        <Border HeightRequest="64" WidthRequest="64"
                                BackgroundColor="#00796B"
                                StrokeShape="RoundRectangle 32">
                            <Image Source="search_24_filled.svg"
                                   HeightRequest="28" WidthRequest="28"
                                   HorizontalOptions="Center"
                                   VerticalOptions="Center"/>
                        </Border>
                        <Label Text="物料出库" FontSize="12" Margin="0,6,0,0"
                               HorizontalTextAlignment="Center" TextColor="#333"/>
                    </VerticalStackLayout>
                    <Frame.GestureRecognizers>
                        <TapGestureRecognizer Tapped="OnOutMat"/>
                    </Frame.GestureRecognizers>
                </Frame>

                <!-- 成品出库接货 -->
                <Frame Grid.Row="2" Grid.Column="0" Style="{StaticResource Card}">
                    <VerticalStackLayout HorizontalOptions="Center">
                        <Border HeightRequest="64" WidthRequest="64"
                                BackgroundColor="#FF7043"
                                StrokeShape="RoundRectangle 32">
                            <Image Source="vehicle_truck_24_filled.svg"
                                   HeightRequest="28" WidthRequest="28"
                                   HorizontalOptions="Center"
                                   VerticalOptions="Center"/>
                        </Border>
                        <Label Text="成品出库接货" FontSize="12" Margin="0,6,0,0"
                               HorizontalTextAlignment="Center" TextColor="#333"/>
                    </VerticalStackLayout>
                    <Frame.GestureRecognizers>
                        <TapGestureRecognizer Tapped="OnOutFinished"/>
                    </Frame.GestureRecognizers>
                </Frame>

                <!-- 模具出库管理 -->
                <Frame Grid.Row="2" Grid.Column="1" Style="{StaticResource Card}">
                    <VerticalStackLayout HorizontalOptions="Center">
                        <Border HeightRequest="64" WidthRequest="64"
                                BackgroundColor="Gold"
                                StrokeShape="RoundRectangle 32">
                            <Image Source="wrench_24_filled.svg"
                                   HeightRequest="28" WidthRequest="28"
                                   HorizontalOptions="Center"
                                   VerticalOptions="Center"/>
                        </Border>
                        <Label Text="模具出库管理" FontSize="12" Margin="0,6,0,0"
                               HorizontalTextAlignment="Center" TextColor="#333"/>
                    </VerticalStackLayout>
                    <Frame.GestureRecognizers>
                        <TapGestureRecognizer Tapped="OnMoldOut"/>
                    </Frame.GestureRecognizers>
                </Frame>

                <!-- 模具入库管理 -->
                <Frame Grid.Row="3" Grid.Column="0" Style="{StaticResource Card}">
                    <VerticalStackLayout HorizontalOptions="Center">
                        <Border HeightRequest="64" WidthRequest="64"
                                BackgroundColor="LavenderBlush"
                                StrokeShape="RoundRectangle 32">
                            <Image Source="document_24_filled.svg"
                                   HeightRequest="28" WidthRequest="28"
                                   HorizontalOptions="Center"
                                   VerticalOptions="Center"/>
                        </Border>
                        <Label Text="模具入库管理" FontSize="12" Margin="0,6,0,0"
                               HorizontalTextAlignment="Center" TextColor="#333"/>
                    </VerticalStackLayout>
                    <Frame.GestureRecognizers>
                        <TapGestureRecognizer Tapped="OnMoldIn"/>
                    </Frame.GestureRecognizers>
                </Frame>

                <!-- 库存查询 -->
                <Frame Grid.Row="3" Grid.Column="1" Style="{StaticResource Card}">
                    <VerticalStackLayout HorizontalOptions="Center">
                        <Border HeightRequest="64" WidthRequest="64"
                BackgroundColor="#9E9E9E"
                StrokeShape="RoundRectangle 32">
                            <Image Source="stock_search.svg"
                   HeightRequest="28" WidthRequest="28"
                   HorizontalOptions="Center"
                   VerticalOptions="Center"/>
                        </Border>
                        <Label Text="库存查询" FontSize="12" Margin="0,6,0,0"
               HorizontalTextAlignment="Center" TextColor="#333"/>
                    </VerticalStackLayout>
                    <Frame.GestureRecognizers>
                        <TapGestureRecognizer Tapped="OnInventorySearch"/>
                    </Frame.GestureRecognizers>
                </Frame>

                <!-- 库存盘点 -->
                <Frame Grid.Row="4" Grid.Column="0" Style="{StaticResource Card}">
                    <VerticalStackLayout HorizontalOptions="Center">
                        <Border HeightRequest="64" WidthRequest="64"
                BackgroundColor="#90A4AE"
                StrokeShape="RoundRectangle 32">
                            <Image Source="all_match.svg"
                   HeightRequest="28" WidthRequest="28"
                   HorizontalOptions="Center"
                   VerticalOptions="Center"/>
                        </Border>
                        <Label Text="库存盘点" FontSize="12" Margin="0,6,0,0"
               HorizontalTextAlignment="Center" TextColor="#333"/>
                    </VerticalStackLayout>
                    <Frame.GestureRecognizers>
                        <TapGestureRecognizer Tapped="OnStockCheck"/>
                    </Frame.GestureRecognizers>
                </Frame>

            </Grid>
            <!-- 仓储作业 -->
            <Label Text="生产作业" Style="{StaticResource SectionTitle}"/>

            <Grid ColumnDefinitions="*,*"
       RowDefinitions="Auto,Auto,Auto"
       Padding="8,0,8,24">

                <!-- 工单查询 -->
                <Frame Grid.Row="0" Grid.Column="0" Style="{StaticResource Card}">
                    <VerticalStackLayout HorizontalOptions="Center">
                        <Border HeightRequest="64" WidthRequest="64"
                     BackgroundColor="CadetBlue"
                     StrokeShape="RoundRectangle 32">
                            <Image Source="order_search.svg"
                        HeightRequest="28" WidthRequest="28"
                        HorizontalOptions="Center"
                        VerticalOptions="Center"/>
                        </Border>
                        <Label Text="工单查询 " FontSize="12" Margin="0,6,0,0"
                    HorizontalTextAlignment="Center" TextColor="#333"/>
                    </VerticalStackLayout>
                    <Frame.GestureRecognizers>
                        <TapGestureRecognizer Tapped="OnWorkOrder"/>
                    </Frame.GestureRecognizers>
                </Frame>

                <!-- 工序任务执行 -->
                <Frame Grid.Row="0" Grid.Column="1" Style="{StaticResource Card}">
                    <VerticalStackLayout HorizontalOptions="Center">
                        <Border HeightRequest="64" WidthRequest="64"
                     BackgroundColor="#26C6DA"
                     StrokeShape="RoundRectangle 32">
                            <Image Source="checkmark_circle_24_filled.svg"
                        HeightRequest="28" WidthRequest="28"
                        HorizontalOptions="Center"
                        VerticalOptions="Center"/>
                        </Border>
                        <Label Text="工序任务执行" FontSize="12" Margin="0,6,0,0"
                    HorizontalTextAlignment="Center" TextColor="#333"/>
                    </VerticalStackLayout>
                    <Frame.GestureRecognizers>
                        <TapGestureRecognizer Tapped="OnInProcess"/>
                    </Frame.GestureRecognizers>
                </Frame>

               

            </Grid>
            <!-- 质检作业" -->
            <Label Text="质检作业" Style="{StaticResource SectionTitle}"/>

            <Grid ColumnDefinitions="*,*"
                    RowDefinitions="Auto,Auto,Auto"
                    Padding="8,0,8,24">

                <!-- 质检单查询 -->
                <Frame Grid.Row="0" Grid.Column="0" Style="{StaticResource Card}">
             <VerticalStackLayout HorizontalOptions="Center">
                 <Border HeightRequest="64" WidthRequest="64"
              BackgroundColor="#00ACC1"
              StrokeShape="RoundRectangle 32">
                     <Image Source="pen_24_filled.svg"
                 HeightRequest="28" WidthRequest="28"
                 HorizontalOptions="Center"
                 VerticalOptions="Center"/>
                 </Border>
                        <Label Text="质检单查询" FontSize="12" Margin="0,6,0,0"
             HorizontalTextAlignment="Center" TextColor="#333"/>
             </VerticalStackLayout>
                    <Frame.GestureRecognizers>
                        <TapGestureRecognizer Tapped="OnAllQuality"/>
                    </Frame.GestureRecognizers>

                </Frame>

                <!-- 来料质检执行IQC -->
                <Frame Grid.Row="0" Grid.Column="1" Style="{StaticResource Card}">
                    <VerticalStackLayout HorizontalOptions="Center">
                        <Border HeightRequest="64" WidthRequest="64"
              BackgroundColor="#26C6DA"
              StrokeShape="RoundRectangle 32">
                            <Image Source="checkmark_circle_24_filled.svg"
                 HeightRequest="28" WidthRequest="28"
                 HorizontalOptions="Center"
                 VerticalOptions="Center"/>
                        </Border>
                        <Label Text="来料质检执行IQC" FontSize="12" Margin="0,6,0,0"
             HorizontalTextAlignment="Center" TextColor="#333"/>
                    </VerticalStackLayout>
                    <Frame.GestureRecognizers>
                        <TapGestureRecognizer Tapped="OnIQC"/>
                    </Frame.GestureRecognizers>
                </Frame>

                <!-- 过程质检执行IPQC -->
                <Frame Grid.Row="1" Grid.Column="0" Style="{StaticResource Card}">
                    <VerticalStackLayout HorizontalOptions="Center">
                        <Border HeightRequest="64" WidthRequest="64"
                                BackgroundColor="#00796B"
                                StrokeShape="RoundRectangle 32">
                            <Image Source="process_check.svg"
                                   HeightRequest="28" WidthRequest="28"
                                   HorizontalOptions="Center"
                                   VerticalOptions="Center"/>
                        </Border>
                        <Label Text="过程质检执行IPQC" FontSize="12" Margin="0,6,0,0"
                               HorizontalTextAlignment="Center" TextColor="#333"/>
                    </VerticalStackLayout>
                    <Frame.GestureRecognizers>
                        <TapGestureRecognizer Tapped="OnIPQC"/>
                    </Frame.GestureRecognizers>
                </Frame>

                <!-- 成品质检执行FQC -->
                <Frame Grid.Row="1" Grid.Column="1" Style="{StaticResource Card}">
                    <VerticalStackLayout HorizontalOptions="Center">
                        <Border HeightRequest="64" WidthRequest="64"
                                BackgroundColor="#FF7043"
                                StrokeShape="RoundRectangle 32">
                            <Image Source="finish_check.svg"
                                   HeightRequest="28" WidthRequest="28"
                                   HorizontalOptions="Center"
                                   VerticalOptions="Center"/>
                        </Border>
                        <Label Text="成品质检执行FQC" FontSize="12" Margin="0,6,0,0"
                               HorizontalTextAlignment="Center" TextColor="#333"/>
                    </VerticalStackLayout>
                    <Frame.GestureRecognizers>
                        <TapGestureRecognizer Tapped="OnFQC"/>
                    </Frame.GestureRecognizers>
                </Frame>
                <!-- 发货质检执行OQC -->
                <Frame Grid.Row="2" Grid.Column="0" Style="{StaticResource Card}">
                    <VerticalStackLayout HorizontalOptions="Center">
                        <Border HeightRequest="64" WidthRequest="64"
                 BackgroundColor="BurlyWood"
                 StrokeShape="RoundRectangle 32">
                            <Image Source="shopping_cart.svg"
                    HeightRequest="28" WidthRequest="28"
                    HorizontalOptions="Center"
                    VerticalOptions="Center"/>
                        </Border>
                        <Label Text="发货质检执行OQC" FontSize="12" Margin="0,6,0,0"
                HorizontalTextAlignment="Center" TextColor="#333"/>
                    </VerticalStackLayout>
                    <Frame.GestureRecognizers>
                        <TapGestureRecognizer Tapped="OnOQC"/>
                    </Frame.GestureRecognizers>
                </Frame>

                <!-- 其他质检执行 -->
                <Frame Grid.Row="2" Grid.Column="1" Style="{StaticResource Card}">
                    <VerticalStackLayout HorizontalOptions="Center">
                        <Border HeightRequest="64" WidthRequest="64"
                 BackgroundColor="Beige"
                 StrokeShape="RoundRectangle 32">
                            <Image Source="where_to_vote.svg"
                    HeightRequest="28" WidthRequest="28"
                    HorizontalOptions="Center"
                    VerticalOptions="Center"/>
                        </Border>
                        <Label Text="其他质检执行" FontSize="12" Margin="0,6,0,0"
                HorizontalTextAlignment="Center" TextColor="#333"/>
                    </VerticalStackLayout>
                    <Frame.GestureRecognizers>
                        <TapGestureRecognizer Tapped="OnOtherQ"/>
                    </Frame.GestureRecognizers>
                </Frame>

            </Grid>

            <!-- 设备作业 -->
            <Label Text="设备作业" Style="{StaticResource SectionTitle}"/>

            <Grid ColumnDefinitions="*,*"
                    RowDefinitions="Auto,Auto,Auto,Auto"
                    Padding="8,0,8,24">

                <!-- 点检任务查询 -->
                <Frame Grid.Row="0" Grid.Column="0" Style="{StaticResource Card}">
                    <VerticalStackLayout HorizontalOptions="Center">
                        <Border HeightRequest="64" WidthRequest="64"
                                BackgroundColor="GreenYellow"
                                StrokeShape="RoundRectangle 32">
                            <Image Source="inspect_search.svg"
                                   HeightRequest="28" WidthRequest="28"
                                   HorizontalOptions="Center"
                                   VerticalOptions="Center"/>
                        </Border>
                        <Label Text="点检任务查询" FontSize="12" Margin="0,6,0,0"
                               HorizontalTextAlignment="Center" TextColor="#333"/>
                    </VerticalStackLayout>
                    <Frame.GestureRecognizers>
                        <TapGestureRecognizer Tapped="OnInSpectionSearch"/>
                    </Frame.GestureRecognizers>
                </Frame>

                <!-- 点检任务执行 -->
                <Frame Grid.Row="0" Grid.Column="1" Style="{StaticResource Card}">
                    <VerticalStackLayout HorizontalOptions="Center">
                        <Border HeightRequest="64" WidthRequest="64"
                                BackgroundColor="CadetBlue"
                                StrokeShape="RoundRectangle 32">
                            <Image Source="inspect_run.svg"
                                   HeightRequest="28" WidthRequest="28"
                                   HorizontalOptions="Center"
                                   VerticalOptions="Center"/>
                        </Border>
                        <Label Text="点检任务执行" FontSize="12" Margin="0,6,0,0"
                               HorizontalTextAlignment="Center" TextColor="#333"/>
                    </VerticalStackLayout>
                    <Frame.GestureRecognizers>
                        <TapGestureRecognizer Tapped="OnInSpectionRunSearch"/>
                    </Frame.GestureRecognizers>
                </Frame>
                <Frame Grid.Row="1" Grid.Column="0" Style="{StaticResource Card}">
                    <VerticalStackLayout HorizontalOptions="Center">
                        <Border HeightRequest="64" WidthRequest="64"
                 BackgroundColor="MediumPurple"
                 StrokeShape="RoundRectangle 32">
                            <Image Source="maintain_search.svg"
                    HeightRequest="28" WidthRequest="28"
                    HorizontalOptions="Center"
                    VerticalOptions="Center"/>
                        </Border>
                        <Label Text="维护保养任务查询" FontSize="12" Margin="0,6,0,0"
                HorizontalTextAlignment="Center" TextColor="#333"/>
                    </VerticalStackLayout>
                    <Frame.GestureRecognizers>
                        <TapGestureRecognizer Tapped="OnMaintenanceSearch"/>
                    </Frame.GestureRecognizers>
                </Frame>
                <Frame Grid.Row="1" Grid.Column="1" Style="{StaticResource Card}">
                    <VerticalStackLayout HorizontalOptions="Center">
                        <Border HeightRequest="64" WidthRequest="64"
                              BackgroundColor="AliceBlue"
                              StrokeShape="RoundRectangle 32">
                            <Image Source="maintain.svg"
                             HeightRequest="28" WidthRequest="28"
                             HorizontalOptions="Center"
                             VerticalOptions="Center"/> 
                        </Border>
                        <Label Text="维护保养执行" FontSize="12" Margin="0,6,0,0"
                        HorizontalTextAlignment="Center" TextColor="#333"/> 
                    </VerticalStackLayout>
                    <Frame.GestureRecognizers>
                        <TapGestureRecognizer Tapped="OnMaintenanceRunSearch"/>
                    </Frame.GestureRecognizers>
                </Frame>
                <Frame Grid.Row="2" Grid.Column="0" Style="{StaticResource Card}">
                    <VerticalStackLayout HorizontalOptions="Center">
                        <Border HeightRequest="64" WidthRequest="64"
                   BackgroundColor="Pink"
                   StrokeShape="RoundRectangle 32">
                            <Image Source="repair.svg"
                      HeightRequest="28" WidthRequest="28"
                      HorizontalOptions="Center"
                      VerticalOptions="Center"/>
                        </Border>
                        <Label Text="维修工单查询" FontSize="12" Margin="0,6,0,0"
                 HorizontalTextAlignment="Center" TextColor="#333"/>
                    </VerticalStackLayout>
                    <Frame.GestureRecognizers>
                        <TapGestureRecognizer Tapped="OnRepairSearch"/>
                    </Frame.GestureRecognizers>
                </Frame>
                <Frame Grid.Row="2" Grid.Column="1" Style="{StaticResource Card}">
                    <VerticalStackLayout HorizontalOptions="Center">
                        <Border HeightRequest="64" WidthRequest="64"
   BackgroundColor="GreenYellow"
   StrokeShape="RoundRectangle 32">
                            <Image Source="repair_run.svg"
      HeightRequest="28" WidthRequest="28"
      HorizontalOptions="Center"
      VerticalOptions="Center"/>
                        </Border>
                        <Label Text="维修执行" FontSize="12" Margin="0,6,0,0"
 HorizontalTextAlignment="Center"/>
                    </VerticalStackLayout>
                    <Frame.GestureRecognizers>
                        <TapGestureRecognizer Tapped="OnRepairRunSearch"/>
                    </Frame.GestureRecognizers>
                </Frame>
                <Frame Grid.Row="3" Grid.Column="0" Style="{StaticResource Card}">
                    <VerticalStackLayout HorizontalOptions="Center">
                        <Border HeightRequest="64" WidthRequest="64"
     BackgroundColor="Orange"
     StrokeShape="RoundRectangle 32">
                            <Image Source="except_submit.svg"
        HeightRequest="28" WidthRequest="28"
        HorizontalOptions="Center"
        VerticalOptions="Center"/>
                        </Border>
                        <Label Text="异常提报" FontSize="12" Margin="0,6,0,0"
   HorizontalTextAlignment="Center" TextColor="#333"/>
                    </VerticalStackLayout>
                    <Frame.GestureRecognizers>
                        <TapGestureRecognizer Tapped="OnExceptionSubmission"/>
                    </Frame.GestureRecognizers>
                </Frame>
            </Grid>

            <Label Text="能源管理系统" Style="{StaticResource SectionTitle}" />
            <Grid ColumnDefinitions="*,*"
        RowDefinitions="Auto,Auto,Auto"
        Padding="8,0,8,24">

                <!-- 手动抄表  -->
                <Frame Grid.Row="0" Grid.Column="0" Style="{StaticResource Card}">
                    <VerticalStackLayout HorizontalOptions="Center">
                        <Border HeightRequest="64" WidthRequest="64"
                    BackgroundColor="#00796B"
                    StrokeShape="RoundRectangle 32">
                            <Image Source="search_24_filled.svg"
                       HeightRequest="28" WidthRequest="28"
                       HorizontalOptions="Center"
                       VerticalOptions="Center"/>
                        </Border>
                        <Label Text="手动抄表" FontSize="12" Margin="0,6,0,0"
                   HorizontalTextAlignment="Center" TextColor="#333"/>
                    </VerticalStackLayout>
                    <Frame.GestureRecognizers>
                        <TapGestureRecognizer Tapped="OnEnergyManualRead" />
                    </Frame.GestureRecognizers>
                </Frame>

            </Grid>
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
