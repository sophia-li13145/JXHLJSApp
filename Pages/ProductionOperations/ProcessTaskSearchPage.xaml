<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="JXHLJSApp.Pages.ProcessTaskSearchPage"
             Shell.NavBarIsVisible="True">

    <!-- 根布局：顶部（蓝条） / 条件区 / 列表 -->
    <Grid RowDefinitions="Auto,Auto,*">

        <!-- 顶部蓝条 -->
        <Grid Grid.Row="0" BackgroundColor="#007BFF" HeightRequest="56" Padding="16,0">
            <Label Text="{Binding HeaderTitle}"
                   VerticalOptions="Center"
                   TextColor="White"
                   FontSize="18"
                   FontAttributes="Bold" />
        </Grid>

        <!-- 条件区 -->
        <VerticalStackLayout Grid.Row="1" Padding="12" Spacing="10">
            <!-- 第一行：物料名称 + 查询 + 扫码图标按钮 -->
            <Grid ColumnDefinitions="*,40,Auto">
                <Entry x:Name="OrderEntry"
                       Placeholder="请输入/扫描物料名称"
                       Text="{Binding Keyword}"
                       HeightRequest="40" />
                <ImageButton  Grid.Column="1"
                Source="scan_button.png"      
                WidthRequest="36"
                 HeightRequest="36"
                 BackgroundColor="Transparent"
                 Padding="0"
                 Aspect="AspectFit"
                 Clicked="OnScanClicked"  /> 
                <Button Grid.Column="2"
                        Text="查询"
                        HeightRequest="40"
                        Command="{Binding SearchCommand}" />

            </Grid>

            <!-- 第二行：时间 + 状态 -->
            <Grid ColumnDefinitions="Auto,Auto,Auto,*" ColumnSpacing="8">
                <DatePicker Date="{Binding StartDate}" />
                <DatePicker Grid.Column="1" Date="{Binding EndDate}" />
                <Picker 
                    Grid.Column="2"
         Title="状态"
         WidthRequest="120"
         ItemsSource="{Binding StatusOptions}"
         ItemDisplayBinding="{Binding Text}"
         SelectedItem="{Binding SelectedStatusOption}" />
                <Entry Grid.Column="3"
                       Placeholder="请输入机台名称"
                       Text="{Binding MachineKeyword}"
                       HeightRequest="40" />

            </Grid>
        </VerticalStackLayout>

        <!-- 列表（自身可滚动，外面不要再套 ScrollView） -->
        <CollectionView Grid.Row="2"
                        x:Name="OrderList"
                        ItemsSource="{Binding Orders}"
                        SelectionMode="None"
                        RemainingItemsThreshold="2"
                        RemainingItemsThresholdReachedCommand="{Binding LoadMoreCommand}">
                        <CollectionView.Header>
                <VerticalStackLayout Spacing="0" Padding="0,4">
                    <Grid IsVisible="{Binding IsSuanxiWorkshop}">
                        <Grid ColumnDefinitions="80,100,90,90,100,90,120" BackgroundColor="#31BFC1" Padding="4" ColumnSpacing="1">
                            <Label Text="厂家" TextColor="White" />
                            <Label Grid.Column="1" Text="产品名称" TextColor="White" />
                            <Label Grid.Column="2" Text="规格" TextColor="White" />
                            <Label Grid.Column="3" Text="计划数量" TextColor="White" />
                            <Label Grid.Column="4" Text="客户加工" TextColor="White" />
                            <Label Grid.Column="5" Text="使用位置" TextColor="White" />
                            <Label Grid.Column="6" Text="时间" TextColor="White" />
                        </Grid>
                    </Grid>
                    <Grid IsVisible="{Binding IsRechuliWorkshop}">
                        <Grid ColumnDefinitions="70,80,80,60,100,80,120" BackgroundColor="#31BFC1" Padding="4" ColumnSpacing="1">
                            <Label Text="机台" TextColor="White" />
                            <Label Grid.Column="1" Text="钢号" TextColor="White" />
                            <Label Grid.Column="2" Text="规格" TextColor="White" />
                            <Label Grid.Column="3" Text="DV" TextColor="White" />
                            <Label Grid.Column="4" Text="分包/自用" TextColor="White" />
                            <Label Grid.Column="5" Text="备注" TextColor="White" />
                            <Label Grid.Column="6" Text="时间" TextColor="White" />
                        </Grid>
                    </Grid>
                    <Grid IsVisible="{Binding IsLasiWorkshop}">
                        <Grid ColumnDefinitions="70,70,70,70,110,70,90,120" BackgroundColor="#31BFC1" Padding="4" ColumnSpacing="1">
                            <Label Text="机台" TextColor="White" />
                            <Label Grid.Column="1" Text="钢厂" TextColor="White" />
                            <Label Grid.Column="2" Text="钢号" TextColor="White" />
                            <Label Grid.Column="3" Text="挂牌" TextColor="White" />
                            <Label Grid.Column="4" Text="生产规格" TextColor="White" />
                            <Label Grid.Column="5" Text="代码" TextColor="White" />
                            <Label Grid.Column="6" Text="生产数(吨)" TextColor="White" />
                            <Label Grid.Column="7" Text="时间" TextColor="White" />
                        </Grid>
                    </Grid>
                </VerticalStackLayout>
            </CollectionView.Header>
            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <Frame Margin="0,6,0,0" Padding="8" HasShadow="False" BorderColor="#E0E6EF">
                        <Frame.GestureRecognizers>
                            <TapGestureRecognizer
                                Command="{Binding Source={RelativeSource AncestorType={x:Type ContentPage}}, Path=BindingContext.GoExecuteCommand}"
                                CommandParameter="{Binding .}" />
                        </Frame.GestureRecognizers>

                        <Grid ColumnDefinitions="80,100,90,90,100,90,120" ColumnSpacing="1" IsVisible="{Binding Source={RelativeSource AncestorType={x:Type ContentPage}}, Path=BindingContext.IsSuanxiWorkshop}">
                            <Label Text="{Binding FactoryName}" />
                            <Label Grid.Column="1" Text="{Binding MaterialName}" />
                            <Label Grid.Column="2" Text="{Binding MaterialSpec}" />
                            <Label Grid.Column="3" Text="{Binding ScheQty, StringFormat='{0:G29}'}" />
                            <Label Grid.Column="4" Text="{Binding LineName}" />
                            <Label Grid.Column="5" Text="{Binding PlatPlanNo}" />
                            <Label Grid.Column="6" Text="{Binding CreatedTime}" />
                        </Grid>

                        <Grid ColumnDefinitions="70,80,80,60,100,80,120" ColumnSpacing="1" IsVisible="{Binding Source={RelativeSource AncestorType={x:Type ContentPage}}, Path=BindingContext.IsRechuliWorkshop}">
                            <Label Text="{Binding ProductionMachineName}" />
                            <Label Grid.Column="1" Text="{Binding MaterialName}" />
                            <Label Grid.Column="2" Text="{Binding MaterialSpec}" />
                            <Label Grid.Column="3" Text="{Binding ProcessName}" />
                            <Label Grid.Column="4" Text="{Binding LineName}" />
                            <Label Grid.Column="5" Text="{Binding Memo}" />
                            <Label Grid.Column="6" Text="{Binding CreatedTime}" />
                        </Grid>

                        <Grid ColumnDefinitions="70,70,70,70,110,70,90,120" ColumnSpacing="1" IsVisible="{Binding Source={RelativeSource AncestorType={x:Type ContentPage}}, Path=BindingContext.IsLasiWorkshop}">
                            <Label Text="{Binding ProductionMachineName}" />
                            <Label Grid.Column="1" Text="{Binding FactoryName}" />
                            <Label Grid.Column="2" Text="{Binding MaterialName}" />
                            <Label Grid.Column="3" Text="{Binding WorkOrderNo}" />
                            <Label Grid.Column="4" Text="{Binding MaterialSpec}" />
                            <Label Grid.Column="5" Text="{Binding MaterialCode}" />
                            <Label Grid.Column="6" Text="{Binding ScheQty, StringFormat='{0:G29}'}" />
                            <Label Grid.Column="7" Text="{Binding CreatedTime}" />
                        </Grid>

                        <Grid RowDefinitions="Auto,Auto,Auto,Auto" IsVisible="{Binding Source={RelativeSource AncestorType={x:Type ContentPage}}, Path=BindingContext.IsDefaultWorkshop}">
                            <Grid Grid.Row="0" ColumnDefinitions="Auto,*">
                                <Label Text="工单编号：" FontAttributes="Bold" />
                                <Label Grid.Column="1" Text="{Binding WorkOrderNo}" />
                            </Grid>
                            <Grid Grid.Row="1" ColumnDefinitions="Auto,*">
                                <Label Text="工序：" FontAttributes="Bold" />
                                <Label Grid.Column="1" Text="{Binding ProcessName}" />
                            </Grid>
                            <Grid Grid.Row="2" ColumnDefinitions="Auto,*">
                                <Label Text="产品名称：" FontAttributes="Bold" />
                                <Label Grid.Column="1" Text="{Binding MaterialName}" />
                            </Grid>
                            <Grid Grid.Row="3" ColumnDefinitions="Auto,*">
                                <Label Text="创建时间：" FontAttributes="Bold" />
                                <Label Grid.Column="1" Text="{Binding CreatedTime}" />
                            </Grid>
                        </Grid>
                    </Frame>
                </DataTemplate>
            </CollectionView.ItemTemplate>
            <CollectionView.Footer>
                <Grid Padding="8"
                      HorizontalOptions="Center"
                      IsVisible="{Binding IsLoadingMore}">
                    <ActivityIndicator IsRunning="True" />
                    <Label Text="加载中..."
                           Margin="8,0,0,0"
                           VerticalOptions="Center" />
                </Grid>
            </CollectionView.Footer>
        </CollectionView>

    </Grid>
</ContentPage>
