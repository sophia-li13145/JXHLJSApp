<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="JXHLJSApp.Pages.ProcessTaskSearchPage"
             x:Name="ThisPage"
             Shell.NavBarIsVisible="True">

    <!-- 根布局：顶部（蓝条） / 条件区 / 列表 -->
    <Grid RowDefinitions="Auto,Auto,*">

        <!-- 顶部蓝条 -->
        <Grid Grid.Row="0" BackgroundColor="#007BFF" HeightRequest="56" Padding="16,0">
            <Label Text="{Binding HeaderTitle}"
                   VerticalOptions="Center"
                   TextColor="White"
                   FontSize="18"
                   FontAttributes="Bold" />
        </Grid>

        <!-- 条件区 -->
        <VerticalStackLayout Grid.Row="1" Padding="12" Spacing="10">
            <!-- 第一行：物料名称 + 查询 + 扫码图标按钮 -->
            <Grid ColumnDefinitions="*,40,Auto">
                <Entry x:Name="OrderEntry"
                       Placeholder="请输入/扫描物料名称"
                       Text="{Binding Keyword}"
                       HeightRequest="40" />
                <ImageButton  Grid.Column="1"
                Source="scan_button.png"      
                WidthRequest="36"
                 HeightRequest="36"
                 BackgroundColor="Transparent"
                 Padding="0"
                 Aspect="AspectFit"
                 Clicked="OnScanClicked"  /> 
                <Button Grid.Column="2"
                        Text="查询"
                        HeightRequest="40"
                        Command="{Binding SearchCommand}" />

            </Grid>

            <!-- 第二行：时间 + 状态 -->
            <Grid ColumnDefinitions="Auto,Auto,Auto,*" ColumnSpacing="8">
                <DatePicker Date="{Binding StartDate}" />
                <DatePicker Grid.Column="1" Date="{Binding EndDate}" />
                <Picker 
                    Grid.Column="2"
         Title="状态"
         WidthRequest="120"
         ItemsSource="{Binding StatusOptions}"
         ItemDisplayBinding="{Binding Text}"
         SelectedItem="{Binding SelectedStatusOption}" />
                <Entry Grid.Column="3"
                       Placeholder="请输入机台"
                       Text="{Binding MachineKeyword}"
                       HeightRequest="40" />

            </Grid>
        </VerticalStackLayout>

        <!-- 列表（自身可滚动，外面不要再套 ScrollView） -->
        <CollectionView Grid.Row="2"
                        x:Name="OrderList"
                        ItemsSource="{Binding Orders}"
                        SelectionMode="None"
                        RemainingItemsThreshold="2"
                        RemainingItemsThresholdReachedCommand="{Binding LoadMoreCommand}">
            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <Frame Margin="0,6,0,0"
       Padding="8"
       HasShadow="False"
       BorderColor="#E0E6EF">

                        <Frame.GestureRecognizers>
                            <TapGestureRecognizer
            Command="{Binding Source={x:Reference ThisPage}, Path=BindingContext.GoExecuteCommand}"
            CommandParameter="{Binding .}" />
                        </Frame.GestureRecognizers>

                        <!-- ✅ Frame 只能一个子元素，所以加容器 -->
                        <VerticalStackLayout Spacing="0">

                            <!-- 酸洗 -->
                            <Grid RowDefinitions="Auto,Auto,Auto,Auto,Auto,Auto,Auto"
              IsVisible="{Binding Source={x:Reference ThisPage}, Path=BindingContext.IsSuanxiWorkshop}">
                                <Grid Grid.Row="0" ColumnDefinitions="Auto,*">
                                    <Label Text="厂家：" FontAttributes="Bold" />
                                    <Label Grid.Column="1" Text="{Binding SteelMill}" />
                                </Grid>
                                <Grid Grid.Row="1" ColumnDefinitions="Auto,*">
                                    <Label Text="产品名称：" FontAttributes="Bold" />
                                    <Label Grid.Column="1" Text="{Binding MaterialName}" />
                                </Grid>
                                <Grid Grid.Row="2" ColumnDefinitions="Auto,*">
                                    <Label Text="规格：" FontAttributes="Bold" />
                                    <Label Grid.Column="1" Text="{Binding MaterialSpec}" />
                                </Grid>
                                <Grid Grid.Row="3" ColumnDefinitions="Auto,*">
                                    <Label Text="计划数量：" FontAttributes="Bold" />
                                    <Label Grid.Column="1" Text="{Binding ScheQty, StringFormat='{0:G29}'}" />
                                </Grid>
                                <Grid Grid.Row="4" ColumnDefinitions="Auto,*">
                                    <Label Text="客户加工：" FontAttributes="Bold" />
                                    <Label Grid.Column="1" Text="{Binding CustomerIdentifier}" />
                                </Grid>
                                <Grid Grid.Row="5" ColumnDefinitions="Auto,*">
                                    <Label Text="使用位置：" FontAttributes="Bold" />
                                    <Label Grid.Column="1" Text="{Binding Machine}" />
                                </Grid>
                                <Grid Grid.Row="6" ColumnDefinitions="Auto,*">
                                    <Label Text="时间：" FontAttributes="Bold" />
                                    <Label Grid.Column="1" Text="{Binding CreatedTime}" />
                                </Grid>
                            </Grid>

                            <!-- 热处理 -->
                            <Grid RowDefinitions="Auto,Auto,Auto,Auto,Auto,Auto,Auto"
              IsVisible="{Binding Source={x:Reference ThisPage}, Path=BindingContext.IsRechuliWorkshop}">
                                <Grid Grid.Row="0" ColumnDefinitions="Auto,*">
                                    <Label Text="机台：" FontAttributes="Bold" />
                                    <Label Grid.Column="1" Text="{Binding Machine}" />
                                </Grid>
                                <Grid Grid.Row="1" ColumnDefinitions="Auto,*">
                                    <Label Text="钢号：" FontAttributes="Bold" />
                                    <Label Grid.Column="1" Text="{Binding MaterialName}" />
                                </Grid>
                                <Grid Grid.Row="2" ColumnDefinitions="Auto,*">
                                    <Label Text="规格：" FontAttributes="Bold" />
                                    <Label Grid.Column="1" Text="{Binding MaterialSpec}" />
                                </Grid>
                                <Grid Grid.Row="3" ColumnDefinitions="Auto,*">
                                    <Label Text="DV：" FontAttributes="Bold" />
                                    <Label Grid.Column="1" Text="{Binding DvValue}" />
                                </Grid>
                                <Grid Grid.Row="4" ColumnDefinitions="Auto,*">
                                    <Label Text="分包/自用：" FontAttributes="Bold" />
                                    <Label Grid.Column="1" Text="{Binding UsageType}" />
                                </Grid>
                                <Grid Grid.Row="5" ColumnDefinitions="Auto,*">
                                    <Label Text="备注：" FontAttributes="Bold" />
                                    <Label Grid.Column="1" Text="{Binding Memo}" />
                                </Grid>
                                <Grid Grid.Row="6" ColumnDefinitions="Auto,*">
                                    <Label Text="时间：" FontAttributes="Bold" />
                                    <Label Grid.Column="1" Text="{Binding CreatedTime}" />
                                </Grid>
                            </Grid>

                            <!-- 拉丝 -->
                            <Grid RowDefinitions="Auto,Auto,Auto,Auto,Auto,Auto,Auto"
              IsVisible="{Binding Source={x:Reference ThisPage}, Path=BindingContext.IsLasiWorkshop}">
                                <Grid Grid.Row="0" ColumnDefinitions="Auto,*">
                                    <Label Text="机台：" FontAttributes="Bold" />
                                    <Label Grid.Column="1" Text="{Binding Machine}" />
                                </Grid>
                                <Grid Grid.Row="1" ColumnDefinitions="Auto,*">
                                    <Label Text="钢厂：" FontAttributes="Bold" />
                                    <Label Grid.Column="1" Text="{Binding SteelMill}" />
                                </Grid>
                                <Grid Grid.Row="2" ColumnDefinitions="Auto,*">
                                    <Label Text="钢号：" FontAttributes="Bold" />
                                    <Label Grid.Column="1" Text="{Binding MaterialName}" />
                                </Grid>
                                <Grid Grid.Row="3" ColumnDefinitions="Auto,*">
                                    <Label Text="挂牌：" FontAttributes="Bold" />
                                    <Label Grid.Column="1" Text="{Binding ListingMaterialName}" />
                                </Grid>
                                <Grid Grid.Row="4" ColumnDefinitions="Auto,*">
                                    <Label Text="生产规格：" FontAttributes="Bold" />
                                    <Label Grid.Column="1" Text="{Binding MaterialSpec}" />
                                </Grid>
                                <Grid Grid.Row="5" ColumnDefinitions="Auto,*">
                                    <Label Text="代码：" FontAttributes="Bold" />
                                    <Label Grid.Column="1" Text="{Binding CustomerIdentifier}" />
                                </Grid>
                                <Grid Grid.Row="6" ColumnDefinitions="Auto,*">
                                    <Label Text="生产数(吨)：" FontAttributes="Bold" />
                                    <Label Grid.Column="1" Text="{Binding ScheQty, StringFormat='{0:G29}'}" />
                                </Grid>
                                <Grid Grid.Row="7" ColumnDefinitions="Auto,*">
                                    <Label Text="时间：" FontAttributes="Bold" />
                                    <Label Grid.Column="1" Text="{Binding CreatedTime}" />
                                </Grid>
                            </Grid>

                        </VerticalStackLayout>
                    </Frame>
                </DataTemplate>
            </CollectionView.ItemTemplate>
            <CollectionView.Footer>
                <Grid Padding="8"
                      HorizontalOptions="Center"
                      IsVisible="{Binding IsLoadingMore}">
                    <ActivityIndicator IsRunning="True" />
                    <Label Text="加载中..."
                           Margin="8,0,0,0"
                           VerticalOptions="Center" />
                </Grid>
            </CollectionView.Footer>
        </CollectionView>

        <!-- 查询全局 loading：点击查询后立即显示，直到接口返回并完成列表绑定 -->
        <Grid Grid.RowSpan="3"
              IsVisible="{Binding IsBusy}"
              BackgroundColor="#33000000"
              InputTransparent="False">
            <VerticalStackLayout HorizontalOptions="Center"
                                 VerticalOptions="Center"
                                 Spacing="8">
                <ActivityIndicator IsRunning="{Binding IsBusy}"
                                   Color="#007BFF"
                                   WidthRequest="36"
                                   HeightRequest="36" />
                <Label Text="查询中..."
                       TextColor="#007BFF"
                       FontAttributes="Bold"
                       HorizontalTextAlignment="Center" />
            </VerticalStackLayout>
        </Grid>

    </Grid>
</ContentPage>
