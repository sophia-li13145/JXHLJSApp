<ContentPage
    x:Class="JXHLJSApp.Pages.WorkProcessTaskDetailPage"
    x:Name="Root"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:vm="clr-namespace:JXHLJSApp.ViewModels"
    xmlns:conv="clr-namespace:JXHLJSApp.Converters"
    BackgroundColor="White"
    Title="{Binding HeaderTitle}">
    <ContentPage.Resources>
        <ResourceDictionary>
            <conv:InverseBoolConverter x:Key="InverseBoolConverter" />
            <conv:ProcessBoolToColorConverter x:Key="BoolToColor" />
            <conv:IndexConverter x:Key="IndexConverter" />
            <conv:NullOrEmptyPlaceholderConverter x:Key="PlaceholderConverter" />
            <Style x:Key="TopActionButton" TargetType="Button">
                <Setter Property="HeightRequest" Value="36" />
                <Setter Property="CornerRadius" Value="8" />
                <Setter Property="TextColor" Value="White" />
                <Setter Property="FontAttributes" Value="Bold" />
                <Setter Property="Padding" Value="18,6" />
                <!-- 增加禁用态 -->
                <Setter Property="VisualStateManager.VisualStateGroups">
                    <VisualStateGroupList>
                        <VisualStateGroup Name="CommonStates">
                            <VisualState Name="Normal" />
                            <VisualState Name="Disabled">
                                <VisualState.Setters>
                                    <Setter Property="Opacity" Value="0.5" />
                                </VisualState.Setters>
                            </VisualState>
                        </VisualStateGroup>
                    </VisualStateGroupList>
                </Setter>
            </Style>
            
            <Style x:Key="BtnGreen" BasedOn="{StaticResource TopActionButton}" TargetType="Button">
                <Setter Property="BackgroundColor" Value="#12C312" />
            </Style>
            <Style x:Key="BtnOrange" BasedOn="{StaticResource TopActionButton}" TargetType="Button">
                <Setter Property="BackgroundColor" Value="#FF7A00" />
            </Style>
            <Style x:Key="BtnBlue" BasedOn="{StaticResource TopActionButton}" TargetType="Button">
                <Setter Property="BackgroundColor" Value="#1E76FF" />
            </Style>
            <!-- 日期“超链接”标签样式 -->
            <Style x:Key="DateActionLabelStyle" TargetType="Label">
                <Setter Property="TextDecorations" Value="Underline" />
                <Setter Property="BackgroundColor" Value="Transparent" />
                <Setter Property="VerticalTextAlignment" Value="Center" />
                <Setter Property="Padding" Value="2,0" />
                <!-- 默认当有值时的“可编辑”颜色 -->
                <Setter Property="TextColor" Value="#2D6AE3" />
                <Style.Triggers>
                    <!-- 正在编辑 & 没有值：浅灰（提示去选择） -->
                    <MultiTrigger TargetType="Label">
                        <MultiTrigger.Conditions>
                            <BindingCondition Binding="{Binding Source={x:Reference Root}, Path=BindingContext.IsEditing}" Value="True" />
                            <BindingCondition Binding="{Binding RawMaterialProductionDate}" Value="" />
                        </MultiTrigger.Conditions>
                        <Setter Property="TextColor" Value="#2D6AE3" />
                    </MultiTrigger>
                    <MultiTrigger TargetType="Label">
                        <MultiTrigger.Conditions>
                            <BindingCondition Binding="{Binding Source={x:Reference Root}, Path=BindingContext.IsEditing}" Value="True" />
                            <BindingCondition Binding="{Binding RawMaterialProductionDate}" Value="{x:Null}" />
                        </MultiTrigger.Conditions>
                        <Setter Property="TextColor" Value="#2D6AE3" />
                    </MultiTrigger>

                    <!-- 不可编辑：无论是否有值，统一置灰 & 禁止点击（InputTransparent 由外层Grid控制，见下） -->
                    <DataTrigger TargetType="Label"
                                 Binding="{Binding Source={x:Reference Root}, Path=BindingContext.IsEditing}"
                                 Value="False">
                        <Setter Property="TextColor" Value="#BDBDBD" />
                    </DataTrigger>
                </Style.Triggers>
            </Style>

            <!-- “删除”标签样式 -->
            <Style x:Key="DeleteActionLabelStyle" TargetType="Label">
                <Setter Property="TextColor" Value="Red" />
                <Setter Property="BackgroundColor" Value="Transparent" />
                <Setter Property="VerticalTextAlignment" Value="Center" />
                <Style.Triggers>
                    <!-- 不可编辑：置灰 -->
                    <DataTrigger TargetType="Label"
                                 Binding="{Binding Source={x:Reference Root}, Path=BindingContext.IsEditing}"
                                 Value="False">
                        <Setter Property="TextColor" Value="#BDBDBD" />
                    </DataTrigger>
                </Style.Triggers>
            </Style>
        </ResourceDictionary>
    </ContentPage.Resources>

    <Grid x:Name="RootGrid" RowDefinitions="Auto,Auto,Auto,*,Auto" Padding="12" RowSpacing="10">
        <Label Grid.Row="1" Text="工单基础信息" FontAttributes="Bold" Margin="0,8,0,4"/>
        <Grid Grid.Row="2" ColumnDefinitions="Auto,Auto,Auto,*,Auto" ColumnSpacing="10">
            <Button Text="开工"
            Style="{StaticResource BtnGreen}"
            Command="{Binding StartWorkCommand}"
            IsEnabled="{Binding CanStart}" />

            <Button Grid.Column="1"
            Text="{Binding PauseResumeText}" 
                Style="{StaticResource BtnOrange}"
            Command="{Binding PauseResumeCommand}"
            IsEnabled="{Binding CanPauseResume}" />

                <Button Grid.Column="2"
            Text="完工"
            Style="{StaticResource BtnBlue}"
            Command="{Binding FinishCommand}"
            IsEnabled="{Binding CanFinish}" />
        </Grid>
        <!-- 基础信息卡片 -->
        <!-- 可编辑区（开工后启用） -->
        <ScrollView x:Name="BodyScroll" Grid.Row="3">
            <VerticalStackLayout x:Name="BodyStack" Spacing="10" HorizontalOptions="Fill">

                <Frame Padding="12" HasShadow="False" BorderColor="#E5E7EB" CornerRadius="8">
                    <Grid ColumnDefinitions="Auto,*,Auto,*" RowDefinitions="Auto,Auto,Auto,Auto,Auto,Auto,Auto"
                           ColumnSpacing="8" RowSpacing="8">

                        <!-- 酸洗字段 -->
                        <Label Grid.Row="0" Grid.Column="0" Text="厂家：" IsVisible="{Binding IsSuanxiWorkshop}" />
                        <Label Grid.Row="0" Grid.Column="1" Text="{Binding Detail.steelMill}" IsVisible="{Binding IsSuanxiWorkshop}" />
                        <Label Grid.Row="0" Grid.Column="2" Text="产品名称：" IsVisible="{Binding IsSuanxiWorkshop}" />
                        <Label Grid.Row="0" Grid.Column="3" Text="{Binding Detail.materialName}" IsVisible="{Binding IsSuanxiWorkshop}" />

                        <Label Grid.Row="1" Grid.Column="0" Text="规格：" IsVisible="{Binding IsSuanxiWorkshop}" />
                        <Label Grid.Row="1" Grid.Column="1" Text="{Binding Detail.materialSpec}" IsVisible="{Binding IsSuanxiWorkshop}" />
                        <Label Grid.Row="1" Grid.Column="2" Text="计划数量：" IsVisible="{Binding IsSuanxiWorkshop}" />
                        <Label Grid.Row="1" Grid.Column="3" Text="{Binding Detail.scheQty, StringFormat='{0:G29}'}" IsVisible="{Binding IsSuanxiWorkshop}" />

                        <Label Grid.Row="2" Grid.Column="0" Text="客户加工：" IsVisible="{Binding IsSuanxiWorkshop}" />
                        <Label Grid.Row="2" Grid.Column="1" Text="{Binding Detail.customerIdentifier}" IsVisible="{Binding IsSuanxiWorkshop}" />
                        <Label Grid.Row="2" Grid.Column="2" Text="使用位置：" IsVisible="{Binding IsSuanxiWorkshop}" />
                        <Label Grid.Row="2" Grid.Column="3" Text="{Binding Detail.machine}" IsVisible="{Binding IsSuanxiWorkshop}" />

                        <!-- 热处理字段 -->
                        <Label Grid.Row="0" Grid.Column="0" Text="机台：" IsVisible="{Binding IsRechuliWorkshop}" />
                        <Label Grid.Row="0" Grid.Column="1" Text="{Binding Detail.machine}" IsVisible="{Binding IsRechuliWorkshop}" />
                        <Label Grid.Row="0" Grid.Column="2" Text="钢号：" IsVisible="{Binding IsRechuliWorkshop}" />
                        <Label Grid.Row="0" Grid.Column="3" Text="{Binding Detail.materialName}" IsVisible="{Binding IsRechuliWorkshop}" />

                        <Label Grid.Row="1" Grid.Column="0" Text="规格：" IsVisible="{Binding IsRechuliWorkshop}" />
                        <Label Grid.Row="1" Grid.Column="1" Text="{Binding Detail.materialSpec}" IsVisible="{Binding IsRechuliWorkshop}" />
                        <Label Grid.Row="1" Grid.Column="2" Text="DV：" IsVisible="{Binding IsRechuliWorkshop}" />
                        <Label Grid.Row="1" Grid.Column="3" Text="{Binding Detail.dvValue}" IsVisible="{Binding IsRechuliWorkshop}" />

                        <Label Grid.Row="2" Grid.Column="0" Text="分包/自用：" IsVisible="{Binding IsRechuliWorkshop}" />
                        <Label Grid.Row="2" Grid.Column="1" Text="{Binding Detail.usageType}" IsVisible="{Binding IsRechuliWorkshop}" />
                        <Label Grid.Row="2" Grid.Column="2" Text="备注：" IsVisible="{Binding IsRechuliWorkshop}" />
                        <Label Grid.Row="2" Grid.Column="3" Text="{Binding Detail.memo}" IsVisible="{Binding IsRechuliWorkshop}" />

                        <!-- 拉丝字段 -->
                        <Label Grid.Row="0" Grid.Column="0" Text="机台：" IsVisible="{Binding IsLasiWorkshop}" />
                        <Label Grid.Row="0" Grid.Column="1" Text="{Binding Detail.machine}" IsVisible="{Binding IsLasiWorkshop}" />
                        <Label Grid.Row="0" Grid.Column="2" Text="钢厂：" IsVisible="{Binding IsLasiWorkshop}" />
                        <Label Grid.Row="0" Grid.Column="3" Text="{Binding Detail.steelMill}" IsVisible="{Binding IsLasiWorkshop}" />

                        <Label Grid.Row="1" Grid.Column="0" Text="钢号：" IsVisible="{Binding IsLasiWorkshop}" />
                        <Label Grid.Row="1" Grid.Column="1" Text="{Binding Detail.materialName}" IsVisible="{Binding IsLasiWorkshop}" />
                        <Label Grid.Row="1" Grid.Column="2" Text="挂牌：" IsVisible="{Binding IsLasiWorkshop}" />
                        <Label Grid.Row="1" Grid.Column="3" Text="{Binding Detail.listingMaterialName}" IsVisible="{Binding IsLasiWorkshop}" />

                        <Label Grid.Row="2" Grid.Column="0" Text="生产规格：" IsVisible="{Binding IsLasiWorkshop}" />
                        <Label Grid.Row="2" Grid.Column="1" Text="{Binding Detail.materialSpec}" IsVisible="{Binding IsLasiWorkshop}" />
                        <Label Grid.Row="2" Grid.Column="2" Text="代码：" IsVisible="{Binding IsLasiWorkshop}" />
                        <Label Grid.Row="2" Grid.Column="3" Text="{Binding Detail.customerIdentifier}" IsVisible="{Binding IsLasiWorkshop}" />

                        <!-- 默认字段 -->
                        <Label Grid.Row="3" Grid.Column="0" Text="工单号："  />
                        <Label Grid.Row="3" Grid.Column="1" Text="{Binding Detail.workOrderNo}" />
             
                        <!-- 公共字段 -->
                        <Label Grid.Row="3" Grid.Column="2" Text="工单名称：" />
                        <Label Grid.Row="3" Grid.Column="3" Text="{Binding Detail.workOrderName}" />

                        <Label Grid.Row="4" Grid.Column="0" Text="工序：" FontAttributes="Bold"/>
                        <Label Grid.Row="4" Grid.Column="1" Text="{Binding Detail.processName}" FontAttributes="Bold"/>

                        <Label Grid.Row="4" Grid.Column="2" Text="操作人：" />
                        <Label Grid.Row="4" Grid.Column="3" Text="{Binding CurrentUserName}" />
                    </Grid>
                </Frame>


            </VerticalStackLayout>
        </ScrollView>

    </Grid>
</ContentPage>
