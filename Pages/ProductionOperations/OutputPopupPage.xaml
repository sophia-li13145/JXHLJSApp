<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="IndustrialControlMAUI.Pages.OutputPopupPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    Title="新增产出"
    Padding="12"
    BackgroundColor="White">

    <VerticalStackLayout Spacing="10">
        <Grid ColumnDefinitions="90,*">
            <Label Text="物料名称：" VerticalTextAlignment="Center"/>
            <Label Grid.Column="1" Text="{Binding MaterialName}" FontAttributes="Bold"/>
        </Grid>

        <Grid ColumnDefinitions="90,*">
            <Label Text="单位：" VerticalTextAlignment="Center"/>
            <Label Grid.Column="1" Text="{Binding Unit}"/>
        </Grid>

        <Entry Placeholder="产出数量"
           Keyboard="Numeric"
           Text="{Binding QtyText}" />

        <Editor Placeholder="备注" AutoSize="TextChanges" Text="{Binding Memo}" />

        <Grid ColumnDefinitions="*,*">
            <Button Text="取消" Command="{Binding CancelCommand}" />
            <Button Grid.Column="1" Text="确定" Command="{Binding ConfirmCommand}" />
        </Grid>
    </VerticalStackLayout>
</ContentPage>
