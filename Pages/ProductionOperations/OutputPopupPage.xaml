<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="IndustrialControlMAUI.Pages.OutputPopupPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    Title="新增产出"
    Padding="12"
    BackgroundColor="White">


    <Grid RowDefinitions="Auto,Auto,Auto,Auto" ColumnDefinitions="Auto,*" ColumnSpacing="8" RowSpacing="10">
        <!-- 产出物料 -->
        <Label Text="*产出物料：" TextColor="#D0021B" VerticalTextAlignment="Center" />
        <Picker Grid.Column="1"
        ItemsSource="{Binding MaterialOptions}"
        ItemDisplayBinding="{Binding materialName}"  
        SelectedItem="{Binding SelectedMaterial}"
        IsEnabled="{Binding IsPickerEnabled}" />

        <!-- 产出数量 -->
        <Label Grid.Row="1" Text="*产出数量：" TextColor="#D0021B" VerticalTextAlignment="Center" />
        <Entry Grid.Row="1" Grid.Column="1"
               Placeholder="请输入"
               Keyboard="Numeric"
               Text="{Binding QuantityText}" />

        <!-- 备注 -->
        <Label Grid.Row="2" Text="备注：" VerticalTextAlignment="Center" />
        <Entry Grid.Row="2" Grid.Column="1"
               Placeholder="请输入"
               Text="{Binding Memo}" />

        <!-- 底部按钮 -->
        <Grid Grid.Row="3" ColumnDefinitions="*,*" Margin="0,16,0,0">
            <Button
        Text="确认产出"
        Command="{Binding ConfirmCommand}"
        Margin="0,0,6,0" />
            <Button
        Grid.Column="1"
        Text="取消"
        Command="{Binding CancelCommand}" />
        </Grid>
    </Grid>
</ContentPage>
