<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="IndustrialControlMAUI.Pages.AdminPage"
             Title="管理员设置">
    <ScrollView>
        <VerticalStackLayout Padding="24" Spacing="12">

            <!-- 配置版本（只读） -->
            <Label Text="配置版本（只读）" />
            <Entry Text="{Binding SchemaVersion}" IsReadOnly="True"/>

            <Label Text="协议 (http / https)" />
            <Entry Text="{Binding Scheme}" />

            <!-- IP 地址 -->
            <Label Text="后端 IP 地址（可包含端口）" />
            <Entry Text="{Binding IpAddress}" Keyboard="Url"/>

            <!-- 服务名 -->
            <Label Text="服务名" />
            <Entry Text="{Binding ServiceName}" />

            <!-- 服务路径 -->
            <Label Text="服务路径" />
            <Entry Text="{Binding ServicePath}" />

            <!-- 预览 BaseUrl -->
            <Frame BackgroundColor="#eef" Padding="8">
                <Label Text="{Binding BaseUrl}" />
            </Frame>

            <!-- 操作按钮 -->
            <HorizontalStackLayout Spacing="12" Margin="0,12,0,0">
                <Button Text="保存" Command="{Binding SaveCommand}"/>
                <Button Text="从包内默认重载" Command="{Binding ResetToPackageCommand}"/>
            </HorizontalStackLayout>

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
