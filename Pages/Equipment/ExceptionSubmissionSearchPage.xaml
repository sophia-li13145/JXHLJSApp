<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="IndustrialControlMAUI.Pages.ExceptionSubmissionSearchPage"
             Shell.NavBarIsVisible="True">

    <!-- 根布局：顶部（蓝条） / 条件区 / 列表 -->
    <Grid RowDefinitions="Auto,Auto,Auto,*">

        <!-- 顶部蓝条 -->
        <Grid Grid.Row="0" BackgroundColor="#007BFF" HeightRequest="56" Padding="16,0">
            <Label Text="设备管理系统"
                   VerticalOptions="Center"
                   TextColor="White"
                   FontSize="18"
                   FontAttributes="Bold" />
        </Grid>

        <!-- 条件区 -->
        <VerticalStackLayout Grid.Row="1" Padding="12" Spacing="10">
            <!-- 第一行：工单号 + 查询 + 扫码图标按钮 -->
            <Grid ColumnDefinitions="*,70" ColumnSpacing="8">
                <Entry x:Name="QualityNoEntry"
                       Placeholder="异常提报单号"
                       Text="{Binding Keyword}"
                       HeightRequest="40" />
                <Button Grid.Column="1"
                        Text="查询"
                        HeightRequest="40"
                        Command="{Binding SearchCommand}" />

            </Grid>

            <!-- 第二行：时间 + 状态 -->
            <Grid ColumnDefinitions="*,*,Auto" ColumnSpacing="8">
                <DatePicker Date="{Binding StartDate}" />
                <DatePicker Grid.Column="1" Date="{Binding EndDate}" />
                <Picker Grid.Column="2"
                        Title="状态"
                        WidthRequest="120"
                        ItemsSource="{Binding StatusOptions}"
                        ItemDisplayBinding="{Binding Text}"
                        SelectedItem="{Binding SelectedStatusOption}" />
            </Grid>
        </VerticalStackLayout>
        <Grid Grid.Row="2" Padding="16,0">
            <Button 
        Text="新建异常"
        HeightRequest="40"
        WidthRequest="120"
        Command="{Binding GoCreateCommand}"
        VerticalOptions="Center"
        HorizontalOptions="Start"/>
        </Grid>

        <!-- 列表（自身可滚动，外面不要再套 ScrollView） -->
        <CollectionView Grid.Row="3"
                        ItemsSource="{Binding Orders}"
                        SelectionMode="None"
                        RemainingItemsThreshold="2"
                        RemainingItemsThresholdReachedCommand="{Binding LoadMoreCommand}">
            <CollectionView.ItemTemplate>
                <DataTemplate>
                    
                    <Frame Margin="0,6,0,0" Padding="10"
                           HasShadow="False" BorderColor="#E0E6EF">
                        <Grid ColumnDefinitions="*,Auto" RowDefinitions="Auto,Auto,Auto,Auto,Auto,Auto">

                            <!-- 左：单号（仍然在 Row=0, Col=0） -->
                            <Grid Grid.Row="0" Grid.Column="0" ColumnDefinitions="Auto,*">
                                <Label Text="异常提报单号：" FontAttributes="Bold" />
                                <Label Grid.Column="1" Text="{Binding maintainNo}" />
                            </Grid>

                            <!-- 右：按钮区域（新加一层 StackLayout） -->
                            <StackLayout Grid.Row="0" Grid.Column="1"
                 Orientation="Horizontal"
                 Spacing="8"
                 HorizontalOptions="End"
                 VerticalOptions="Center">

                                <!-- 编辑按钮 -->
                                <Button Text="编辑"
                IsVisible="{Binding CanEdit}"
                Command="{Binding Source={RelativeSource AncestorType={x:Type ContentPage}}, Path=BindingContext.GoEditCommand}"
                CommandParameter="{Binding .}"
                HeightRequest="28"
                Padding="10,0"
                BackgroundColor="Transparent"
                TextColor="#2F80ED" />

                                <!-- 报修按钮 -->
                                <Button Text="报修"
                IsVisible="{Binding CanEdit}"
                Command="{Binding Source={RelativeSource AncestorType={x:Type ContentPage}}, Path=BindingContext.RepairCommand}"
                CommandParameter="{Binding .}"
                HeightRequest="28"
                Padding="10,0"
                BackgroundColor="Transparent"
                TextColor="#2F80ED" />
                            </StackLayout>

                            <!-- 下面几行保持不变 -->
                            <Grid Grid.Row="1" ColumnDefinitions="Auto,*">
                                <Label Text="状态：" FontAttributes="Bold" />
                                <Label Grid.Column="1" Text="{Binding auditStatusText}" />
                            </Grid>

                            <Grid Grid.Row="2" ColumnDefinitions="Auto,*">
                                <Label Text="设备名称：" FontAttributes="Bold" />
                                <Label Grid.Column="1" Text="{Binding devName}" />
                            </Grid>

                            <Grid Grid.Row="3" ColumnDefinitions="Auto,*">
                                <Label Text="设备编码：" FontAttributes="Bold" />
                                <Label Grid.Column="1" Text="{Binding devCode}" />
                            </Grid>

                            <Grid Grid.Row="4" ColumnDefinitions="Auto,*">
                                <Label Text="创建日期：" FontAttributes="Bold" />
                                <Label Grid.Column="1" Text="{Binding createdTime, StringFormat='{0:yyyy-M-d}'}" />
                            </Grid>

                            <Grid Grid.Row="5" ColumnDefinitions="Auto,*">
                                <Label Text="紧急程度：" FontAttributes="Bold" />
                                <Label Grid.Column="1" Text="{Binding urgentText}" />
                            </Grid>
                        </Grid>


                        <!-- 点整卡片也可进详情 -->
                        <Frame.GestureRecognizers>
                            <TapGestureRecognizer
                                Command="{Binding Source={RelativeSource AncestorType={x:Type ContentPage}}, Path=BindingContext.GoDetailCommand}"
                                CommandParameter="{Binding .}" />
                        </Frame.GestureRecognizers>
                    </Frame>
                </DataTemplate>
            </CollectionView.ItemTemplate>
            <CollectionView.Footer>
                <Grid Padding="8"
                      HorizontalOptions="Center"
                      IsVisible="{Binding IsLoadingMore}">
                    <ActivityIndicator IsRunning="True" />
                    <Label Text="加载中..."
                           Margin="8,0,0,0"
                           VerticalOptions="Center" />
                </Grid>
            </CollectionView.Footer>
        </CollectionView>

    </Grid>
</ContentPage>
