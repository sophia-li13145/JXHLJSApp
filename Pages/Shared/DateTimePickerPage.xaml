<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="JXHLJSApp.Pages.DateTimePickerPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    Title="选择日期时间"
    Padding="16">
    <VerticalStackLayout Spacing="12">
        <DatePicker x:Name="Dp" />
        <TimePicker x:Name="Tp" />
        <Grid ColumnDefinitions="*,*" ColumnSpacing="12" Margin="0,8,0,0">
            <Button Text="取消" Clicked="OnCancel" />
            <Button Grid.Column="1" Text="确定" Clicked="OnOk" />
        </Grid>
    </VerticalStackLayout>
</ContentPage>
