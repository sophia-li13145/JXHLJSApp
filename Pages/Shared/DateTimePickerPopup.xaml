<?xml version="1.0" encoding="utf-8" ?>
<toolkit:Popup
    x:Class="JXHLJSApp.Popups.DateTimePickerPopup"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
    CanBeDismissedByTappingOutsideOfPopup="True">

    <Frame Padding="16" CornerRadius="12" HasShadow="True" BackgroundColor="White" WidthRequest="320">
        <VerticalStackLayout Spacing="12">

            <Label Text="{Binding Title}" FontAttributes="Bold" FontSize="16" TextColor="#111827"/>

            <Grid ColumnDefinitions="*,*" ColumnSpacing="10">
                <DatePicker Date="{Binding PickDate}" />
                <TimePicker Grid.Column="1" Time="{Binding PickTime}" />
            </Grid>

            <Grid ColumnDefinitions="*,*,*" ColumnSpacing="10">
                <Button Text="清除" BackgroundColor="#F3F4F6" TextColor="#111827"
                        Command="{Binding ClearCommand}" />
                <Button Grid.Column="1" Text="取消" BackgroundColor="#F3F4F6" TextColor="#111827"
                        Command="{Binding CancelCommand}" />
                <Button Grid.Column="2" Text="确定" BackgroundColor="#2F80ED" TextColor="White"
                        Command="{Binding OkCommand}" />
            </Grid>

        </VerticalStackLayout>
    </Frame>
</toolkit:Popup>
